{
  "name": "mmp-vc-plugin",
  "version": "0.0.1",
  "scripts": {
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w"
  },
  "devDependencies": {
    "@sprucelabs/jest-json-reporter": "^7.0.188",
    "@sprucelabs/resolve-path-aliases": "^1.1.292",
    "@sprucelabs/spruce-test-fixtures": "^61.1.1",
    "@sprucelabs/test": "^8.0.45",
    "@sprucelabs/test-utils": "^4.0.129",
    "@types/node": "^20.11.30",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-spruce": "^10.13.6",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.4.3"
  },
  "description": "Utilize mobile measurement partner integrations when running in a native app.",
  "skill": {
    "namespace": "mmp-vc-plugin"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  },
  "dependencies": {
    "@sprucelabs/error": "^5.1.82",
    "@sprucelabs/heartwood-view-controllers": "^109.7.3",
    "@sprucelabs/mercury-client": "^41.0.352",
    "@sprucelabs/mercury-core-events": "^22.2.55",
    "@sprucelabs/mercury-types": "^46.0.271",
    "@sprucelabs/schema": "^29.4.31",
    "@sprucelabs/spruce-core-schemas": "^39.0.265",
    "@sprucelabs/spruce-event-plugin": "^61.1.1",
    "@sprucelabs/spruce-event-utils": "^38.1.11",
    "@sprucelabs/spruce-permission-plugin": "^30.0.635",
    "@sprucelabs/spruce-skill-utils": "^30.3.27",
    "@sprucelabs/spruce-view-plugin": "^46.0.458"
  }
}
